<h2><%= t("views.common.edit_user") %> </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t("views.common.leave_blank_if_you_don't_want_to_change_it") %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t("views.common.characters_minimum") %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t("views.common.we_need_your_current_password_to_confirm_your_changes") %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label t("views.common.zipcode") %><br />
    <%= f.text_field :zip_code %>
  </div>

  <div class="field">
    <%= f.label t("views.common.address") %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label t("views.common.introduction") %><br />
    <%= f.text_field :introduction %>
  </div>

  <div class="actions">
    <%= f.submit t("views.common.Update") %>
  </div>
<% end %>

<h3><%= t("views.common.Cancel_my_account") %></h3>

<div><%= t("views.common.Unhappy?") %> <%= button_to t("views.common.Cancel_my_account"), registration_path(resource_name), data: { confirm: t("views.common.Are_you_sure?"), turbo_confirm: t("views.common.Are_you_sure?") }, method: :delete %></div>

<%= link_to t("views.common.Back"), :back %>
